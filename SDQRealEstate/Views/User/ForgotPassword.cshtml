@using SDQRealEstate.Core.Application.ViewModels.User;
@model ForgotPasswordViewModel
@{
    ViewData["Title"] = "Contraseña Olvidada";
}

<div 
    class='bg- d-flex flex-row justify-content-center align-items-center' 
    style="width: 100%; min-height: 83.9vh; height: auto"
>
    
    <section class="w-50 d-flex flex-column justify-content-center align-items-center gap-2 p-2">
        
        <form method="post" asp-controller="User" asp-action="ForgotPassword" method="post" class='w-75'>
            <h2>Contraseña Olvidada</h2>
            <small class='w-75 text-muted'> ¿Olvidaste tu contraseña? no te preocupes, Digite su Email para recuperar su acceso. </small>

            <hr />

            <div class='w-100'>
                <label asp-for="Email" class='form-label'>Correo</label>
                <input asp-for="Email" class='form-control'/>
                <span asp-validation-for="Email" class="text-success"></span>
            </div>

            <div class='w-100 d-flex text-dark flex-direction justify-content-between align-items-center mt-3'>
                <button type='submit' class='btn btn-success'>Guardar</button>
                <a class='nav-link text-muted' asp-controller="Home" asp-action="Index">Volver atrás</a>
            </div>

            <!-- Errors -->
            @if (Model.HasError != null && Model.HasError)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <p>@Model.Error</p>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
        </form>

    </section>

    <section class="w-75 h-100  p-0 rounded overflow-hidden mx-4">
        <img src='/Images/Predeterminated/changepassword.png' alt='main login image' class='w-100' />
    </section>

</div>