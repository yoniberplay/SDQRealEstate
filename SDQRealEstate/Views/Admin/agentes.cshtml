@using SDQRealEstate.Core.Application.ViewModels.User;

@{
    ViewData["Title"] = "Agentes";
    List<UserViewModel> UsersAgent = ViewBag.UsersAgent;
     String currentuser = ViewBag.currentuser;
}


<div 
    class='d-flex flex-column justify-content-center align-items-center' 
    style="width: 100%; min-height: 83.9vh; height: auto"
>

    <section class="w-75 d-flex flex-row justify-content-center align-content-center mb-4 flex-wrap">
        <h2>Listado Agentes</h2>
         @*<a asp-controller="Admin" asp-action="CreateAdmin" class="btn btn-success"><b> <i class="fa fa-plus" style="font-size:20px"></i>Crear Admin</b></a>*@

         <div class="w-100">
             <hr />
         </div>
    </section>

    <section class="w-100 d-flex flex-row align-items-center justify-content-center" style="min-height: 65vh; height: auto">

        <section class="w-100 rounded overflow-hidden mx-2 mt-2 d-flex justify-content-center align-items-center">
            <img src='/Images/Predeterminated/changepassword.png' alt='main login image' style='width: 75%; height: 25rem; filter: brightness(90%); margin: 0 auto;' />
        </section>

        <div class="w-100 mx-5">
            <table class="table table-hover">
                  <thead>
                        <tr>
                            <th scope="col">NOMBRE</th>
                            <th scope="col">APELLIDO</th>
                            <th scope="col">PROPIEDADES</th>
                            <th scope="col">CORREO</th>
                            <th scope="col">ESTATUS</th>
                            <th scope="col">ACCION</th>
                            <th scope="col">ELIMINAR</th>
                        </tr>
                  </thead>
                  <tbody>

                  @foreach (var item in UsersAgent)
                  {
                    <tr>
                        <td>@item.FirstName</td>
                        <td>@item.LastName</td>
                        <td>@item.CantPropiedades</td>
                        <td>@item.Email</td>
                        <td>@(@item.EmailConfirmed? "ACTIVO" : "INACTIVO")</td>
                        @if (@item.Id != currentuser)
                        {
                            <td>
                                <a class="btn w-100 @(@item.EmailConfirmed? "btn-warning" : "btn-success")" asp-controller="Admin" asp-action=@(item.EmailConfirmed? "DESACTIVARagentes" : "ACTIVARagentes") asp-route-id="@item.Id"> @(@item.EmailConfirmed? "DESACTIVAR" : "ACTIVAR") </a>
                            </td>
                        }
                        else
                        {
                            <td>NINGUNA</td>
                        }
                        <td>
                             <a class="btn btn-danger" asp-controller="Admin" asp-action="EliminarAgente" asp-route-id="@item.Id"> Eliminar </a>
                        </td>
                    </tr>
    
                  }
                  </tbody>
            </table>
        </div>
    </section>
</div>


        




